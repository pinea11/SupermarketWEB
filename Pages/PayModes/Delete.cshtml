@page
@model SupermarketWEB.Pages.PayModes.DeleteModel

<h1>Delete Pay Mode</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PayMode</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.PayMode.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PayMode.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
