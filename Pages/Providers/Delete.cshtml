@page
@model SupermarketWEB.Pages.Providers.DeleteModel

<h1>Delete Provider</h1>

<h3>Are you sure you want to delete this provider?</h3>

<div>
    <h4>Provider</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Provider.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Provider.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Provider.Phone</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Provider.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
