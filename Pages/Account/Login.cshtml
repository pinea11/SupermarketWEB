@page
@model SupermarketWEB.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}

<h2>Iniciar sesión</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input asp-for="User.Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input asp-for="User.PasswordHash" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
}
