@page
@model SupermarketWEB.Pages.Products.DeleteModel

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Product.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Product.Stock</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.Category.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
